# Production environment variables for Aurora Bank (example)
MONGO_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/aurora-bank?retryWrites=true&w=majority
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=7d

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# App
PORT=4000
CORS_ORIGIN=https://your-production-domain.com

# Payment / external services
STRIPE_SECRET_KEY=
SENDGRID_API_KEY=

# Vercel-specific (if using environment variables there, set via dashboard)
# No need to set REACT_APP_API_URL in Vercel; frontend will be served from the same domain
